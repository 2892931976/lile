# vi: ft=make
.PHONY: run proto test benchmark
run:
	go run main.go

proto:
	protoc -I {{.Name}}/ {{.Name}}/{{ .Name }}.proto --go_out=plugins=grpc:{{ .Name }}

test:
	go test -v ./...

benchmark:
	go test -bench=./... -benchmem -benchtime 10s

docker:
	GOOS=linux GOARCH=amd64 go build -o build/{{ .Name }} .
	docker build . -t {{.RelativeName}}:latest
